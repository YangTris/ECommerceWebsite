@model ProductViewModel

@{
	ViewData["Title"] = "ProductDetails";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="product-details-body">
	<!--PRODUCT DETAILS-->
	<div class="product-details-container">
		<div class="product-image">
			<img src="~/Assets/topwatch.png" alt="Product Image">
		</div>
		<div class="product-info">
			<h1 class="product-title">@Html.DisplayFor(modelItem => modelItem.name)</h1>
			<p class="product-description">@Html.DisplayFor(modelItem => modelItem.description)</p>
			<div class="product-price">@Html.DisplayFor(modelItem => modelItem.price)$</div>
			<div class="product-quantity">
				<label for="quantity">Quantity:</label>
				<input type="number" id="quantity" name="quantity" value="1" min="1">
			</div>
			<button class="blue-button">Add to cart</button>
		</div>
	</div>
	<!--END PRODUCT DETAILS-->
	<!--PRODUCT DETAILS SECTION-->
	<div class="product-section" id="product-section-all">
		<div class="product-section-top-container">
			<div class="section-category-container">
				<div class="section-category-type">
					<span class="blue-line"></span>
					<span class="section-category-text">All Electronics</span>
				</div>
				<h1>Explore More</h1>
			</div>
		</div>
	</div>
	<!--END PRODUCT DETAILS SECTION-->
	<!-- PRODUCT SLIDER SECTION -->
	<div class="product-link">
		<a id="allproduct-link" href="../Product/ProductList">View All</a>
	</div>

	<div class="product-slider-container">
		<div class="product-slider">
			<!-- Product Card 1 -->
			<div class="product-card">
				<div class="product-card-image">
					<img src="~/Assets/ipad.png" alt="Product 1">
				</div>
				<div class="product-card-title">Smart Watch Pro</div>
				<div class="product-purchase">
					<span class="product-price">450.000</span>
					<button class="blue-button">
						Add to cart
					</button>
				</div>
			</div>

			<!-- Product Card 2 -->
			<div class="product-card">
				<div class="product-card-image">
					<img src="/api/placeholder/200/200" alt="Product 2">
				</div>
				<div class="product-card-title">Fitness Tracker</div>
				<div class="product-card-price">350.000đ</div>
			</div>

			<!-- Product Card 3 -->
			<div class="product-card">
				<div class="product-card-image">
					<img src="/api/placeholder/200/200" alt="Product 3">
				</div>
				<div class="product-card-title">Sport Watch</div>
				<div class="product-card-price">400.000đ</div>
			</div>

			<!-- Product Card 4 -->
			<div class="product-card">
				<div class="product-card-image">
					<img src="/api/placeholder/200/200" alt="Product 4">
				</div>
				<div class="product-card-title">Classic Watch</div>
				<div class="product-card-price">550.000đ</div>
			</div>

			<!-- Product Card 4 -->
			<div class="product-card">
				<div class="product-card-image">
					<img src="/api/placeholder/200/200" alt="Product 4">
				</div>
				<div class="product-card-title">Classic Watch</div>
				<div class="product-card-price">550.000đ</div>
			</div>

			<!-- Product Card 4 -->
			<div class="product-card">
				<div class="product-card-image">
					<img src="/api/placeholder/200/200" alt="Product 4">
				</div>
				<div class="product-card-title">Classic Watch</div>
				<div class="product-card-price">550.000đ</div>
			</div>

			<!-- Product Card 4 -->
			<div class="product-card">
				<div class="product-card-image">
					<img src="/api/placeholder/200/200" alt="Product 4">
				</div>
				<div class="product-card-title">Classic Watch</div>
				<div class="product-card-price">550.000đ</div>
			</div>
		</div>

		<!-- SLIDER NAVIGATION BUTTON -->
		<div class="slider-buttons">
			<button class="slider-button" onclick="slideLeft()">←</button>
			<button class="slider-button" onclick="slideRight()">→</button>
		</div>
	</div>
	<!-- END PRODUCT SLIDER SECTION -->
</div>

<script>
	const slider = document.querySelector('.product-slider');
	const cardWidth = 300;

	function slideLeft() {
		slider.scrollBy({
			left: -cardWidth,
			behavior: 'smooth'
		});
	}

	function slideRight() {
		slider.scrollBy({
			left: cardWidth,
			behavior: 'smooth'
		});
	}
</script>