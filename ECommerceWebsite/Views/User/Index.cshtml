<div id="user-index-container">
	<h1>User Account</h1>

	<p>
		<a asp-action="Create" class="user-create-button">Create New</a>
	</p>

	<table class="user-table">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(model => model.Name)</th>
				<th>@Html.DisplayNameFor(model => model.Email)</th>
				<th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.Name)</td>
					<td>@Html.DisplayFor(modelItem => item.Email)</td>
					<td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
					<td>
						<a class="user-edit-button" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
						<form asp-action="Delete" asp-route-id="@item.Id" method="post" class="user-delete-form">
							<button type="submit" class="user-delete-button">Delete</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

