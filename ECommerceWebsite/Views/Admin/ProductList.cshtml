@model ECommerceWebsite.Models.AdminProductViewModel

@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="admin-productlist-body">
    <h1>Product List</h1>

    <form method="get" action="@Url.Action("Index")" class="form-inline mb-3">
        <div class="form-group mr-2">
            <input type="text" id="searchName" name="searchName" value="@ViewBag.SearchName" placeholder="Name" class="form-control" />
        </div>
        <div class="form-group mr-2">
            <input type="text" id="searchCategory" name="searchCategory" value="@ViewBag.SearchCategory" placeholder="Category" class="form-control" />
        </div>
        <div class="form-group mr-2">
            <input type="number" id="minPrice" name="minPrice" value="@ViewBag.MinPrice" placeholder="Min Price" class="form-control" />
        </div>
        <div class="form-group mr-2">
            <input type="number" id="maxPrice" name="maxPrice" value="@ViewBag.MaxPrice" placeholder="Max Price" class="form-control" />
        </div>
        <div class="form-group mr-2">
            <input type="text" id="searchDescription" name="searchDescription" value="@ViewBag.SearchDescription" placeholder="Description" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <p>
        <a asp-action="ProductAdd" class="btn btn-primary mb-3">Create New</a>
    </p>

    <table id="product-table" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._products)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.productId)</td>
                    <td>
                        @if(String.IsNullOrEmpty(item.imageUrl))
                        {
                            <img src="~/Assets/default_img.jpg" class="img-thumbnail" style="width: 50px; height: 50px;" />
                        }
                        else
                        {
                            <img src="data:image/png;base64,@item.imageUrl" class="img-thumbnail" style="width: 50px; height: 50px;" />
                        }
                        
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                    <td>@Html.DisplayFor(modelItem => item.description)</td>
                    <td>@Html.DisplayFor(modelItem => item.category)</td>
                    <td>@Html.DisplayFor(modelItem => item.price)$</td>
                    <td>
                        <a href="@Url.Action("ProductEdit")" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a href="@Url.Action("Delete")" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <ul id="pagination" class="pagination"></ul>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var pageSize = 10;
        var currentPage = 1;
        var totalRows = $('#product-table tbody tr').length;
        var totalPages = Math.ceil(totalRows / pageSize);
        
        function showPage(page) {
            currentPage = page;
            $('#product-table tbody tr').hide(); 
            var start = (page - 1) * pageSize;
            var end = start + pageSize;
            $('#product-table tbody tr').slice(start, end).show(); 
            updatePagination();
        }
        
        function updatePagination() {
            $('#pagination').empty(); 
            for (var i = 1; i <= totalPages; i++) {
                var activeClass = (i === currentPage) ? 'active' : '';
                $('#pagination').append('<li class="page-item ' + activeClass + '"><a class="page-link" href="#">' + i + '</a></li>');
            }
            
            $('#pagination .page-link').click(function (e) {
                e.preventDefault();
                var page = parseInt($(this).text());
                showPage(page);
            });
        }

        showPage(1);
    });
</script>


