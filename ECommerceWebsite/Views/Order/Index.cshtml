@model ECommerceWebsite.Models.OrderViewModel
@{
    Layout = "~/Views/Shared/_OrderLayout.cshtml";
}

<div class="order-list-body">
    <div class="order-list-container">
        <h4 class="order-title">Order Details</h4>
        <hr />
        <dl class="row order-details">
            <dt class="col-sm-2 order-label">OrderDate:</dt>
            <dd class="col-sm-10 order-value">@Html.DisplayFor(model => model.OrderDate)</dd>

            <dt class="col-sm-2 order-label">ID:</dt>
            <dd class="col-sm-10 order-value">@Html.DisplayFor(model => model.userId)</dd>

            <dt class="col-sm-2 order-label">Name:</dt>
            <dd class="col-sm-10 order-value">@Html.DisplayFor(model => model.name)</dd>

            <dt class="col-sm-2 order-label">Address:</dt>
            <dd class="col-sm-10 order-value">@Html.DisplayFor(model => model.address)</dd>

            <dt class="col-sm-2 order-label">PhoneNumber:</dt>
            <dd class="col-sm-10 order-value">@Html.DisplayFor(model => model.phoneNumber)</dd>

            <dt class="col-sm-2 order-label">Email:</dt>
            <dd class="col-sm-10 order-value">@Html.DisplayFor(model => model.email)</dd>

            <span style="font-weight:bold; font-size:22px; color: #007bff;">Order</span>
            <hr />
            @foreach (var item in Model.items)
            {
                <div class="cart-item d-flex align-items-center mb-3 position-relative" id="cart-item-@item.productId">
                    <img src="~/Assets/Banner.jpg" alt="Product" class="cart-item-image me-3">
                    <div class="cart-item-details flex-grow-1">
                        <h6 class="cart-item-title mb-0">Name</h6>
                        <p class="cart-item-id text-muted small mb-0">ID: @Html.DisplayFor(modelItem => item.productId)</p>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <div class="cart-item-price" data-price="@item.price">@Html.DisplayFor(modelItem => item.price)$</div>
                            <div class="cart-item-price">Quantity: @Html.DisplayFor(modelItem => item.quantity)</div>
                        </div>
                    </div>
                    <button type="button" class="btn-close position-absolute top-0 end-0 cart-remove-btn" aria-label="Remove" onclick="removeCartItem(@item.productId)"></button>
                </div>
            }
            <hr />
            <dl class="row order-list-details">
                <dt class="col-sm-4">Total:</dt>
                <dd class="col-sm-8">$@Html.DisplayFor(model => model.total)</dd>
            </dl>
        </dl>

        <div class="order-list-actions">
            @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }, new { @class = "order-action-link" }) 
            <a asp-action="Index" class="order-action-link">Back to List</a>
        </div>
    </div>
</div>
